import BaseLayout from '../layouts/Base.astro';
import SkillWeb from '../components/SkillWeb.astro';

const skills = {
  'Front End': [
    'React',
    'Astro',
    'HTML5',
    'CSS3',
    'Bootstrap',
    'MaterializeCSS',
    'TailwindCSS',
    'JQuery',
    'AJAX',
  ],
  'Back End': [
    'PostgreSQL',
    'MySQL',
    'MongoDB',
    'Node.JS',
    'Python',
    'Kubernetes',
    'Terraform',
    'AWS',
    'Database Design',
    'RESTful API Design',
    'Task Automation',
