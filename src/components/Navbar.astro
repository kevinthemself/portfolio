---
import ToggleViewButton from './ToggleViewButton.astro';

const links = [
  { url: '/', name: 'Home' },
  { url: '/about-me', name: 'About Me' },
  { url: '/projects', name: 'Projects' },
  // { url: "/skills", name: "Skills" },
  { url: '/blog', name: 'Blog' },
];

const formattedLinks = links.map((link) => {
  if (Astro.url.pathname === link.url) {
    link.url = '#';
  }
  return link;
});
---

<div class="navbar">
  <nav>
    {formattedLinks.map((link) => <a href={link.url}>{link.name}</a>)}
  </nav>
  <ToggleViewButton />
</div>

<style>
  .navbar {
    display: inline-grid;
    grid-template-columns: [start] 4fr [line2] 1fr [end];
    column-gap: 3rem;
  }
  nav {
    display: flex;
    justify-content: space-around;
    text-align: center;
  }
  nav * {
    padding: 1rem;
  }
  nav a {
    font-weight: 600;
    line-height: 10;
  }
</style>
