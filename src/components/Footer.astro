---
import SocialButtons from './SocialButtons.astro';
---

<footer class="page-boundary">
  {Astro.url.pathname !== '/' && <SocialButtons />}
  <div>
    <p>
      Interested in chatting about a project? Send me a message at <a
        href="mailto:hello@kevincastro.dev">hello@kevincastro.dev</a
      >
    </p>
    <p>
      Built by Kevin Castro with &lt;3 using <a href="https://astro.build/"
        >Astro</a
      >
    </p>
  </div>
</footer>

<style>
  footer {
    padding: 1.5em;
    display: flex;
    justify-content: space-between;
    flex-direction: column;
  }
  div {
    justify-content: center;
    display: flex;
    text-align: center;
    flex-direction: column;
  }
</style>
