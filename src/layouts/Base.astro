---
import Head from '../components/Head.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html
  lang="en"
  color-mode="light">
  <Head title={title} />
  <body>
    <Header />
    <slot />
    <Footer />
    <style is:global>
      :root {
        --accent-gradient: linear-gradient(
          45deg,
          var(--accent),
          var(--analogue) 30%,
          rgb(255, 255, 255) 60%
        );
      }
      :root[color-mode='light'] {
        --accent: rgb(77, 17, 182);
        --accent-background: rgba(77, 17, 182, 12%);
        --analogue: rgb(198, 0, 148);
        --background-color: rgb(246, 246, 246);
        --highlight: rgb(77, 17, 182);
        --highlight-background: rgba(77, 17, 182, 12%);
        --heading-color: rgb(0, 0, 0);
        --text-color: rgb(0, 0, 0);
        --text-background: rgb(240, 240, 244);
      }
      :root[color-mode='dark'] {
        --accent: rgb(131, 96, 195);
        --accent-background: rgba(180, 142, 245, 12%);
        --analogue: rgb(238, 148, 182);
        --background-color: rgb(0, 0, 0);
        --highlight: rgb(255, 255, 255);
        --highlight-background: rgb(131, 96, 195);
        --heading-color: rgb(11, 171, 49);
        --text-color: rgb(255, 255, 255);
        --text-background: rgb(91, 91, 102);
      }
      html {
        color: var(--text-color);
        font-family: system-ui, sans-serif;
        background-color: var(--background-color);
        box-sizing: border-box;
      }
      * {
        box-sizing: inherit;
      }
      section {
        height: 100%;
      }
      code {
        font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
          DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
        font-size: 0.875em;
        font-weight: bold;
        background: var(--highlight-background);
        color: var(--highlight);
        border-radius: 4px;
        padding: 0.3em 0.45em;
      }
      body {
        display: grid;
        min-height: 100vh;
        grid-template-rows: auto 1fr auto;
      }
      main {
        margin: auto;
        padding: 1.5rem;
        max-width: 120ch;
        overflow: auto;
      }
      h1 {
        font-size: 3rem;
        font-weight: 800;
        margin: 0;
      }
      a {
        text-decoration: none;
        color: var(--heading-color);
      }
      a:is(:hover, :focus-within) {
        color: var(--analogue);
        transition: color 0.2s, text-shadow 0.2s ease-in;
        text-shadow: 0.05rem 0 var(--analogue); /* little workaround to simulate bolding without layout change */
      }
      article {
        background-color: var(--text-background);
        color: var(--text-color);
      }
      .button {
        background: linear-gradient(45deg, var(--accent), var(--analogue));
        background-position: 100%;
        border-color: transparent;
        border-radius: 0.6rem;
        border-width: 2px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
          0 2px 4px -2px rgba(0, 0, 0, 0.1);
        color: var(--background-color);
        font-weight: 600;
        padding: 10px 20px;
        transition: color 0.2s ease-in;
      }
      .button:is(:hover, :focus-within) {
        background-position: 0;
        background-image: var(--background-color);
        border-color: var(--accent);
        border-style: solid;
        color: var(--text-color);
        margin: -2px 3px; /* Prevents resizing due to border becoming visible */
      }
      .text-content {
        line-height: 1.6;
        margin: 1rem 0;
        border: 1px solid rgba(var(--accent), 25%);
        padding: 1rem;
        border-radius: 0.4rem;
      }
    </style>
  </body>
</html>
