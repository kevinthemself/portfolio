---
import Head from "../components/Head.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <Head title={title} />
  <body>
    <Header />
    <slot />
    <Footer />
    <style is:global>
      :root {
        --accent: 77, 17, 182;
        --complement: 116, 27, 99;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          rgb(var(--complement)) 30%,
          rgb(255, 255, 255) 60%
        );
      }
      html {
        font-family: system-ui, sans-serif;
        background-color: #f6f6f6;
        box-sizing: border-box;
      }
      * {
        box-sizing: inherit;
      }
      section {
        height: 100%;
      }
      code {
        font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
          DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
        font-size: 0.875em;
        font-weight: bold;
        background: rgba(var(--accent), 12%);
        color: rgb(var(--accent));
        border-radius: 4px;
        padding: 0.3em 0.45em;
      }
      body {
        display: grid;
        min-height: 100vh;
        grid-template-rows: auto 1fr auto;
      }
      main {
        margin: auto;
        padding: 1.5rem;
        max-width: 120ch;
        overflow: auto;
      }
      h1 {
        font-size: 3rem;
        font-weight: 800;
        margin: 0;
      }
      a {
        text-decoration: none;
        color: rgb(var(--accent));
      }
      p > a:is(:hover, :focus-within) {
        color: rgb(var(--complement));
        transition: color 0.2s, text-shadow 0.2s ease-in-out;
        text-shadow: 0.05rem 0 rgb(var(--complement)); /* little workaround to simulate bolding without layout change */
      }
      .button {
        background: linear-gradient(
          45deg,
          rgb(var(--accent)),
          rgb(var(--complement))
        );
        border-color: transparent;
        border-radius: 0.6rem;
        border-width: 2px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
          0 2px 4px -2px rgba(0, 0, 0, 0.1);
        color: rgb(255, 255, 255);
        font-weight: 600;
        padding: 10px 20px;
        transition: color 0.6s ease-in-out;
      }
      .button:is(:hover, :focus-within) {
        background: rgb(255, 255, 255);
        border-color: rgba(var(--accent));
        border-style: solid;
        color: rgb(var(--accent));
        margin: -2px 3px; /* Prevents resizing due to border becoming visible */
      }
      .text-content {
        line-height: 1.6;
        margin: 1rem 0;
        border: 1px solid rgba(var(--accent), 25%);
        background-color: white;
        padding: 1rem;
        border-radius: 0.4rem;
      }
    </style>
  </body>
</html>
